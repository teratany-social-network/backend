                "required": true,
                "content": {
                    "application/json": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string",
                                    "description": "Nom de l'entreprise ou de l'association",
                                    "example": "Teratany MG"
                                },
                                "description": {
                                    "type": "string",
                                    "description": "Description de l'entreprise ou de l'association",
                                    "example": "Cet entreprise est incroyable"
                                },
                                "profileType": {
                                    "type": "string",
                                    "description": "Le tyoe de profile (entreprise ou association)",
                                    "example": "entreprise"
                                },
                                "categories": {
                                    "type": "string",
                                    "description": "Nouvelles categories",
                                    "example": "abdf"
                                },
                                "localisation": {
                                    "type": "object",
                                    "properties": {
                                        "address": {
                                            "type": "object",
                                            "properties": {
                                                "value": {
                                                    "type": "string",
